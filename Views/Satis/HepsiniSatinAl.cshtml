@using SENLStokTakip.Models
@model List<Sepet>
@{
    ViewBag.Title = "HepsiniSatinAl";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="container">
        <h2>Merhaba @Session["Ad"] @Session["Soyad"] Satın alma sayfasına hoşgeldiniz.</h2>
    </div>

    <div class="container table table-bordered">
        @using (Html.BeginForm("HepsiniSatinAl2", "Satis", FormMethod.Post, new { @class = "container" }))
        {
            foreach (var item in Model)
            {
                <div class="form-group">
                    <h5> ID:@Html.DisplayFor(x => item.Id)</h5>
                </div>
                <div class="form-group">
                    <h5> Ürün Ad:@Html.DisplayFor(x => item.Urun.Ad)</h5>
                </div>

                <div class="form-group">
                    <h5> Adet:@Html.DisplayFor(x => item.Adet)</h5>
                </div>

                <div class="form-group">
                    <h5> Fiyat:@Html.DisplayFor(x => item.Urun.Fiyat) ₺</h5>
                </div>
                <div class="form-group">
                    <h5> Toplam Fiyat:@Html.DisplayFor(x => item.ToplamFiyat) ₺</h5>
                </div>

                <div class="form-group">
                    <h5> <img src="~/Content/Image/@item.Urun.Resim" width="50" height="50" /></h5>
                </div>



            }
            <p style="color:red;text-align:left">@ViewBag.Tutar</p>
            <div class="container mx-auto">
                <div class="form-group" style="float:left">
                    <button class="btn btn-success">Onay</button>
                    <a href="/Sepet/Index" class="btn btn-danger">İptal</a>
                </div>

            </div>
        }
    </div>
</div>

