<!DOCTYPE html>
<html lang="en">
<head>
    <title>SENL</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link href="~/SiteImg/a.ico" rel="shortcut icon"  type="image/x-icon"/>

</head>
<body>

    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/Home/Index">Se-ticaretNL</a>
            </div>
            <ul class="nav navbar-nav">
                @if (User.IsInRole("A"))
                {
                    <li><a href="/Kategori/Index">Kategoriler</a></li>

                    <li><a href="/TumSatislar/Index">Tüm Satışlar</a></li>
                    <li><a href="/Urun/KritikStok">Kritik Stok @Html.Action("StokCount", "Urun")</a></li>
                    <li><a href="/Urun/StokGrafik">Stok Takip</a></li>
                    <li><a href="/Istatistik/Index">İstatistikler</a></li>




                }
                <li><a href="/Account/Guncelle" style="color:white">@Session["Ad"] @Session["Soyad"]</a></li>
                <li><a href="/Urun/Index">Ürünler</a></li>
                @if (User.IsInRole("U"))
                {
                    <li><a href="/Satis/Index">Satışlar</a></li>

                    <li>
                        <a href="/Sepet/Index">
                            <img src="~/Content/Image/t.png" style="border-radius:10px;" width="30" height="30" /><label style="color:red">@{Html.RenderAction("SepetCount", "Sepet");}</label>
                        </a>
                    </li>


                }


                <li><a href="/Account/Logout">Çıkış Yap</a></li>

            </ul>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

</body>
</html>
